{
  "name": "vscode-hexo-utils",
  "displayName": "vscode-hexo-utils",
  "description": "vscode extension for hexo",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hexo.new",
        "title": "Add a new article",
        "icon": {
          "light": "resources/light/icon-add.svg",
          "dark": "resources/dark/icon-add.svg"
        }
      },
      {
        "command": "hexo.remove",
        "title": "Remove to draft",
        "icon": {
          "light": "resources/light/icon-remove.svg",
          "dark": "resources/dark/icon-remove.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hexoUtils",
          "title": "Hexo Utils",
          "icon": "resources/hexo-activitybar.svg"
        }
      ]
    },
    "views": {
      "hexoUtils": [
        {
          "id": "hexo.post",
          "name": "post"
        },
        {
          "id": "hexo.draft",
          "name": "draft"
        },
        {
          "id": "hexo.category",
          "name": "categories"
        },
        {
          "id": "hexo.tags",
          "name": "tags"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "hexo.new",
          "group": "navigation",
          "when": "view =~ /hexo.(post|draft)/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  }
}
