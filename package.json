{
  "name": "vscode-hexo-utils",
  "displayName": "vscode-hexo-utils",
  "description": "vscode extension for hexo",
  "version": "0.0.2",
  "preview": true,
  "license": "MIT",
  "author": {
    "name": "Jerry wang",
    "email": "fantasy.cwxyz@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/cwxyz007/vscode-hexo-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cwxyz007/vscode-hexo-utils.git"
  },
  "publisher": "fantasy",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/hexo.png",
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Hexo",
      "properties": {
        "hexo.includeDraft": {
          "type": "boolean",
          "default": false,
          "description": "Controls whether include drafts."
        }
      }
    },
    "commands": [
      {
        "command": "hexo.new.post",
        "title": "Add a new post",
        "icon": {
          "light": "resources/light/icon-add.svg",
          "dark": "resources/dark/icon-add.svg"
        }
      },
      {
        "command": "hexo.new.draft",
        "title": "Add a new draft",
        "icon": {
          "light": "resources/light/icon-add.svg",
          "dark": "resources/dark/icon-add.svg"
        }
      },
      {
        "command": "hexo.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/icon-refresh.svg",
          "dark": "resources/dark/icon-refresh.svg"
        }
      },
      {
        "command": "hexo.move.to.draft",
        "title": "Move to draft"
      },
      {
        "command": "hexo.move.to.post",
        "title": "Move to post"
      },
      {
        "command": "hexo.delete",
        "title": "Delete",
        "icon": {
          "light": "resources/light/icon-remove.svg",
          "dark": "resources/dark/icon-remove.svg"
        }
      },
      {
        "command": "hexo.open",
        "title": "Open a article"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hexoUtils",
          "title": "Hexo Utils",
          "icon": "resources/hexo-activitybar.svg"
        }
      ]
    },
    "views": {
      "hexoUtils": [
        {
          "id": "hexo.post",
          "name": "post",
          "scope": "resource"
        },
        {
          "id": "hexo.draft",
          "name": "draft",
          "scope": "resource"
        },
        {
          "id": "hexo.categories",
          "name": "categories"
        },
        {
          "id": "hexo.tags",
          "name": "tags"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "hexo.refresh",
          "group": "navigation"
        },
        {
          "command": "hexo.new.post",
          "group": "navigation",
          "when": "view == hexo.post"
        },
        {
          "command": "hexo.new.draft",
          "group": "navigation",
          "when": "view == hexo.draft"
        }
      ],
      "view/item/context": [
        {
          "command": "hexo.move.to.draft",
          "when": "view == hexo.post",
          "group": "hexo@1"
        },
        {
          "command": "hexo.move.to.post",
          "when": "view == hexo.draft",
          "group": "hexo@1"
        },
        {
          "command": "hexo.delete",
          "when": "view =~ /hexo.(draft|post)/",
          "group": "hexo@2"
        }
      ]
    }
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/mustache": "^0.8.32",
    "@types/node": "^8.10.25",
    "@types/yamljs": "^0.2.30",
    "conventional-changelog-cli": "^2.0.11",
    "tslint": "^5.8.0",
    "typescript": "^3.1.4",
    "vscode": "^1.1.25"
  },
  "dependencies": {
    "mustache": "^3.0.1",
    "yamljs": "^0.3.0"
  }
}
