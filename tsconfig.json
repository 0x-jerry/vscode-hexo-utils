{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "esnext",
    "outDir": "out",
    "lib": ["esnext"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src", "typings"]
}
